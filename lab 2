    # Python Program - Find HCF and lcm
print("Enter two numbers to find HCF and LCM: ");
num1 = input();
if num1 == 'x':
    exit();
else:
    num2 = input();
    number1 = int(num1);
    number2 = int(num2);
    temp1 = number1;
    temp2 = number2;
    while temp2 != 0:
    	t = temp2;
    	temp2 = temp1%temp2;
    	temp1 = t;
    hcf = temp1;
    lcm = (number1*number2)/hcf;
    print("HCF =",hcf);
    print("LCM =",lcm);

input
enter two numbers to find lcm and hcf:3,5


output:
15,1

import math
x= int(input('Enter First Number'))
y= int(input('Enter Second Number'))
z= int(input('Enter Third Number'))
gcd_ans = math.gcd(x,y)
gcd_final =math.gcd(gcd_ans,z)
lcm_ans=x*y/gcd_final
print(lcm_ans)
print(gcd_final)

